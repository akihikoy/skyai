BASE_REL_DIR:=../..
include $(BASE_REL_DIR)/Makefile_preconf
##-------------------------------------------------------------------------------------------
OTARGETS=$(OBJS)
ifeq ($(USING_SO),true)
  SO := ../lib/libskyai_mstd.so.$(SKYAI_SOVER)
  OTARGETS=
endif
##-------------------------------------------------------------------------------------------
OBJS := $(patsubst %.cpp,%.o,$(wildcard modules_std/*.cpp))#
LOBJS:=$(OBJS:.o=.lo)
##-------------------------------------------------------------------------------------------
EXTRA_CLEAN+= ../lib/*.o
##-------------------------------------------------------------------------------------------
USING_LORA_OCT:=true
USING_SKYAI:=true
include $(BASE_REL_DIR)/Makefile_body
##-------------------------------------------------------------------------------------------
# modify the rules:
all : $(OTARGETS)

%.o : %.cpp
	$(CXX) -o $@ $(LIBS) $(CXXFLAGS) -c $<
	@(ln -sfv ../src/$@ ../lib/)
	@(echo "*************************************************")
	@(echo "../lib/`basename $@` is generated")
	@(echo "*************************************************")
##-------------------------------------------------------------------------------------------
