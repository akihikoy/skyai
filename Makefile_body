## for libskyai
LIBSKYAI := $(SKYAI_BASE)/libskyai
ifeq ($(USING_SKYAI_ODE),true)
  USING_SKYAI:=true
  USING_LORA_ODE:=true
endif
ifeq ($(USING_SKYAI),true)
  USING_LORA_OCT:=true
  LIBS    += -I$(LIBSKYAI)/include
  ifeq ($(USING_SO),true)
    LIBOBJS += $(LIBSKYAI)/lib/libskyai_mcore.so.$(SKYAI_SOVER)
    LIBOBJS += $(LIBSKYAI)/lib/libskyai_mstd.so.$(SKYAI_SOVER)
    LIBOBJS += $(LIBSKYAI)/lib/libskyai.so.$(SKYAI_SOVER)
    LDLIBS  += -Wl,-rpath $(LIBSKYAI)/lib
  else
    LIBOBJS += $(LIBSKYAI)/lib/*.o $(LIBSKYAI)/lib/libskyai.a
  endif
  LDLIBS  += -lboost_filesystem -lboost_regex
endif
ifeq ($(MAKING_SKYAI),true)
  MAKE_CMD_SKYAI:=make -C $(LIBSKYAI)/src
  MAKING_LORA:=true
endif
##-------------------------------------------------------------------------------------------
## for liblora
LIBLORA := $(SKYAI_BASE)/liblora
MAKE_LORA_SUB:=std
ifeq ($(USING_LORA_OCT),true)
  USING_LORA:=true
  USING_OCTAVE:=true
  ifeq ($(USING_SO),true)
    LIBOBJS += $(LIBLORA)/lib/liblora_oct.so.$(SKYAI_SOVER)
  else
    LIBOBJS += $(LIBLORA)/lib/liblora_oct.a
  endif
  MAKE_LORA_SUB+= oct
endif
ifeq ($(USING_LORA_ODE),true)
  USING_LORA:=true
  USING_ODE:=true
  ifeq ($(USING_SO),true)
    LIBOBJS += $(LIBLORA)/lib/liblora_ode.so.$(SKYAI_SOVER)
  else
    LIBOBJS += $(LIBLORA)/lib/liblora_ode.a
  endif
  MAKE_LORA_SUB+= ode
endif
ifeq ($(USING_LORA),true)
  USING_OCTAVE:=true
  LIBS   += -I$(LIBLORA)/include
  ifeq ($(USING_SO),true)
    LIBOBJS += $(LIBLORA)/lib/liblora.so.$(SKYAI_SOVER)
    LDLIBS  += -Wl,-rpath $(LIBLORA)/lib
  else
    LIBOBJS += $(LIBLORA)/lib/liblora.a
  endif
endif
ifeq ($(MAKING_LORA),true)
  MAKE_CMD_LORA:=make -C $(LIBLORA)/src $(MAKE_LORA_SUB)
endif
##-------------------------------------------------------------------------------------------
include $(SKYAI_BASE)/Makefile_libconf
##-------------------------------------------------------------------------------------------
all : extra_make $(ARC) $(EXEC) $(SO)
##-------------------------------------------------------------------------------------------
## extra make
extra_make :
	@(set -e; $(MAKE_CMD_LORA))
	@(set -e; $(MAKE_CMD_SKYAI))
##-------------------------------------------------------------------------------------------
## generic make rules

clean   :
	@rm $(RMFLAGS) *.o *.lo *.a *.so *.so.$(SKYAI_SOVER) *.il $(OBJS) $(LOBJS) $(EXEC) $(ARC) $(SO) $(EXTRA_CLEAN)
	@find -name '*.d' -type f | xargs rm $(RMFLAGS)

$(EXEC) : $(OBJS) $(LIBOBJS)
	$(CXX) -o $@ $(OBJS) $(LDFLAGS) $(LIBOBJS) $(LDLIBS)
	@(echo "*************************************************")
	@(echo "$@ is generated")
	@(echo "*************************************************")

$(ARC) : $(OBJS)
	$(AR) r $(ARC) $(OBJS)
	@(echo "*************************************************")
	@(echo "$@ is generated")
	@(echo "*************************************************")

$(SO) : $(LOBJS)
	$(CXX) -shared -Wl,-soname,`basename $@` $(LOBJS) -o $@
	@(echo "*************************************************")
	@(echo "$@ is generated")
	@(echo "*************************************************")

%.o : %.cpp
	$(CXX) -o $@ $(LIBS) $(CXXFLAGS) -c $<

%.lo : %.cpp
	$(CXX) -o $@ $(LIBS) $(CXXFLAGS) -c -fPIC $<

DEPOPT  ?= -MM

%.d: %.cpp
	@(rm -f $@; \
	$(CXX) $(DEPOPT) $(LIBS) $(CXXFLAGS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	[ -s $@ ] || rm -f $@; \
	rm -f $@.$$$$; \
	)
##-------------------------------------------------------------------------------------------
include $(OBJS:.o=.d) $(LOBJS:.lo=.d)
##-------------------------------------------------------------------------------------------
