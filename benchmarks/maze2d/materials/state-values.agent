// behavior module must be defined
module  MStateValueCalculatorNF                          , state_values
module  MActionValueCalculatorNF                         , action_values
module  MRealMatrixLogger                                , logger_state_values
module  MRealMatrixLogger                                , logger_action_values

connect  lmanager.signal_start_of_episode              ,state_values.slot_calculate
connect  state_values.slot_calculate_finished          ,logger_state_values.slot_log
connect  lmanager.signal_start_of_episode              ,action_values.slot_calculate
connect  action_values.slot_calculate_finished         ,logger_action_values.slot_log

connect  behavior.out_state_value                      ,state_values.in_state_value
connect  ngnet.out_f2                                  ,state_values.in_state_to_feature
connect  behavior.out_action_value                     ,action_values.in_action_value
connect  ngnet.out_f2                                  ,action_values.in_state_to_feature

connect  lmanager.out_episode_number                   ,logger_state_values.in_file_number
connect  state_values.out_state_values                 ,logger_state_values.in_real_matrix
connect  lmanager.out_episode_number                   ,logger_action_values.in_file_number
connect  action_values.out_action_values               ,logger_action_values.in_real_matrix


/// parameter setting:
lmanager.config ={
    MaxEpisodeNumber = 0
  }

state_values.config={
    Min = (-1.0, -1.0)
    Max = (1.0, 1.0)
    Division = (50, 50)
  }

logger_state_values.config={
    FilePrefix = "XXXRESDIR/state-values.dat"
  }

action_values.config={
    Min = (-1.0, -1.0)
    Max = (1.0, 1.0)
    Division = (50, 50)
  }

logger_action_values.config={
    FilePrefix = "XXXRESDIR/action-values.dat"
  }
